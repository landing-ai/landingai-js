{
  "compilerOptions": {
    "outDir": "types",
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declarationMap": true,
    "incremental": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "types", "dist", "**/*.test.ts"]
}
